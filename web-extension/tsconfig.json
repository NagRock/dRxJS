{
  "extends": "../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": ["node"],
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist/js",
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
