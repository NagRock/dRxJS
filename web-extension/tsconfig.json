{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "build/**/*.*"
  ]
}
